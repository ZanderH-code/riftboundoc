---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "riftboundoc" } = Astro.props;
const base = import.meta.env.BASE_URL;
const siteVersion = "2026.02.20.11";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/webp" href={`${base}assets/img/domains/order.webp`} />
    <link rel="stylesheet" href={`${base}assets/css/styles.css?v=20260220d`} />
    <script is:inline src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script src={`${base}assets/js/site.js?v=20260220l`}></script>
  </head>
  <body>
    <header class="topbar">
      <div class="container">
        <a class="brand" href={base}>riftboundoc</a>
        <nav>
          <a href={base}>Home</a>
          <a href={`${base}cards/`}>Cards</a>
          <a href={`${base}faq/`}>FAQ</a>
          <a href={`${base}errata/`}>Errata</a>
          <a href={`${base}rules/`}>Rules</a>
          <a href={`${base}updates/`}>Updates</a>
        </nav>
      </div>
    </header>
    <slot />
    <footer class="footer">
      <div class="container footer-row">
        <span id="site-version">v{siteVersion}</span>
        <div class="footer-links" aria-label="GitHub links">
          <a
            class="footer-icon-link"
            href="https://github.com/ZanderH-code"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub Profile"
            title="GitHub Profile"
          >
            <svg viewBox="0 0 16 16" aria-hidden="true">
              <path
                d="M8 0C3.58 0 0 3.58 0 8a8 8 0 0 0 5.47 7.59c.4.07.55-.17.55-.38v-1.33c-2.23.49-2.7-1.08-2.7-1.08-.36-.92-.89-1.16-.89-1.16-.73-.5.06-.49.06-.49.81.06 1.23.83 1.23.83.72 1.24 1.89.88 2.35.67.07-.52.28-.88.5-1.08-1.78-.2-3.64-.89-3.64-3.95 0-.88.31-1.6.82-2.16-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82a7.65 7.65 0 0 1 4 0c1.53-1.03 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.28.82 2.16 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48v2.2c0 .21.14.46.55.38A8 8 0 0 0 16 8c0-4.42-3.58-8-8-8Z"
              />
            </svg>
          </a>
          <a
            class="footer-icon-link"
            href="https://github.com/ZanderH-code/riftboundoc"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub Repository"
            title="GitHub Repository"
          >
            <svg viewBox="0 0 24 24" aria-hidden="true">
              <path
                d="M4.75 3A2.75 2.75 0 0 0 2 5.75v12.5A2.75 2.75 0 0 0 4.75 21h14.5A2.75 2.75 0 0 0 22 18.25V5.75A2.75 2.75 0 0 0 19.25 3H4.75Zm0 1.5h6.5v15h-6.5A1.25 1.25 0 0 1 3.5 18.25V5.75A1.25 1.25 0 0 1 4.75 4.5Zm8 0h6.5a1.25 1.25 0 0 1 1.25 1.25v12.5a1.25 1.25 0 0 1-1.25 1.25h-6.5v-15Zm-6 2.5h3v1.5h-3V7Zm0 3h3v1.5h-3V10Zm0 3h3v1.5h-3V13Z"
              />
            </svg>
          </a>
        </div>
      </div>
    </footer>
  </body>
</html>
